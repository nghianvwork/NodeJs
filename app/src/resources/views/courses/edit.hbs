<div class="mt-4">
<h3>Cập nhật khóa học</h3>
<form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Tên khóa học</label>
    <input type="text" class="form-control" value="{{course.name}}" id="name", name="name" placeholder="Nhập tên khóa học">
  </div>
<div class="form-group">
    <label for="description">Mô tả khóa học</label>
    <textarea class="form-control" id="description" name="description" placeholder="Nhập mô tả khóa học">{{course.description}}</textarea>
</div>
 <div class="form-group">
    <label for="videoId">Video khóa học</label>
    <input type="text" class="form-control" value="{{course.videoid}}" id="videoId" name="videoId" >
  </div>
<tex class="form-group">
    <label for="description">Trình độ</label>
    <input type="text" class="form-control" value="{{course.level}}" id="level" name="level" placeholder="Nhập level khóa học">
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary">Lưu lại</button>
  </div>
</form>
</div>